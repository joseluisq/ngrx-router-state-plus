{
  "compilerOptions": {
    "strict": true,
    "baseUrl": ".",
    "declaration": true,
    "stripInternal": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "strictPropertyInitialization": false,
    "module": "es2015",
    "moduleResolution": "node",
    "noEmitOnError": false,
    "outDir": "./dist",
    "rootDir": ".",
    "sourceMap": true,
    "inlineSources": true,
    "lib": [
      "es2017",
      "dom"
    ],
    "target": "es2015",
    "skipLibCheck": true
  },
  "angularCompilerOptions": {
    "annotateForClosureCompiler": true,
    "strictMetadataEmit": false,
    "flatModuleOutFile": "index.js",
    "flatModuleId": "ngrx-router-state-plus"
  },
  "include": [
    "src/**/*.ts"
  ],
  "compileOnSave": false,
  "buildOnSave": false
}
